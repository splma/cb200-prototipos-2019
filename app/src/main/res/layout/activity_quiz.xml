<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUp"
    tools:ignore="Overdraw">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/fondoappt" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#d8000000"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_marginBottom="0dp"
            android:src="@drawable/logohorizontal" />

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TableRow>

                <TextView
                    android:id="@+id/txv_pregunta"
                    android:layout_width="309dp"
                    android:layout_height="312dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/input"
                    android:inputType="textMultiLine"
                    android:paddingLeft="20dp"
                    android:paddingTop="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="10dp"
                    android:text="@string/pregunta"
                    android:textColor="#fff"
                    android:textColorHint="#ccc"
                    android:textSize="20dp" />

            </TableRow>

        </TableLayout>

        <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/radioGroupRespuestas">

            <RadioButton
                android:id="@+id/radio_uno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="36.4 mts"
                android:textColor="#fff"
                android:textSize="20dp"
                android:buttonTint="@color/colorPrimaryDark"/>

            <RadioButton
                android:id="@+id/radio_dos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="40 mts"
                android:textColor="#fff"
                android:textSize="20dp"
                android:buttonTint="@color/colorPrimaryDark"/>

            <RadioButton
                android:id="@+id/radio_tres"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="43.9 mts"
                android:textColor="#fff"
                android:textSize="20dp"
                android:buttonTint="@color/colorPrimaryDark"/>

            <RadioButton
                android:id="@+id/radio_cuatro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="45 mts"
                android:textColor="#fff"
                android:textSize="20dp"
                android:buttonTint="@color/colorPrimaryDark"
                />
        </RadioGroup>

        <Button
            android:id="@+id/comprobar_Respuesta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/btn_fondo_color"
            android:elevation="5dp"
            android:text="Comprobar respuesta"
            android:textColor="#fff"
            android:textSize="16sp" />



    </LinearLayout>

</RelativeLayout>